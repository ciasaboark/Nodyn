<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreferenceCompat
        android:defaultValue="@string/pref_default_audit_email_embed_image"
        android:key="@string/pref_key_audit_email_embed_image"
        android:summaryOff="@string/pref_description_disabled_audit_email_embed_image"
        android:summaryOn="@string/pref_description_enabled_audit_email_embed_image"
        android:title="@string/pref_title_audit_email_embed_image"
        />

    <Preference
        android:key="@string/pref_key_beta_rebuild_statistics"
        android:summary="@string/pref_description_beta_rebuild_statistics"
        android:title="@string/pref_title_beta_rebuild_statistics"/>

    <Preference
        android:key="@string/pref_key_beta_statistics_email"
        android:summary="@string/pref_description_beta_statistics_email"
        android:title="@string/pref_title_beta_statistics_email"/>

    <SwitchPreferenceCompat
        android:defaultValue="@string/pref_default_beta_scanlog_enable"
        android:key="@string/pref_key_beta_scanlog_enable"
        android:summaryOff="@string/pref_description_disabled_beta_scanlog_enable"
        android:summaryOn="@string/pref_description_enabled_beta_scanlog_enable"
        android:title="@string/pref_title_beta_scanlog_enable"
        />

