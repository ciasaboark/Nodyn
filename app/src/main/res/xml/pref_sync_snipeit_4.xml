<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:defaultValue="@string/pref_default_snipeit_4_protocol"
        android:hint="@string/pref_hint_snipeit_4_protocol"
        android:inputType="text"
        android:key="@string/pref_key_snipeit_4_protocol"
        android:maxLines="1"
        android:singleLine="true"
        android:title="@string/pref_title_snipeit_4_protocol"
        />

    <EditTextPreference
        android:hint="@string/pref_hint_snipeit_4_host"
        android:inputType="text"
        android:key="@string/pref_key_snipeit_4_host"
        android:maxLines="1"
        android:singleLine="true"
        android:title="@string/pref_title_snipeit_4_host"
        />

    <EditTextPreference
        android:defaultValue="@string/pref_default_snipeit_4_port"
        android:hint="@string/pref_hint_snipeit_4_port"
        android:inputType="numberDecimal"
        android:key="@string/pref_key_snipeit_4_port"
        android:title="@string/pref_title_snipeit_4_port"
        />

    <EditTextPreference
        android:defaultValue="@string/pref_default_snipeit_4_api_key"
        android:hint="@string/pref_hint_snipeit_4_api_key"
        android:inputType="text"
        android:key="@string/pref_key_snipeit_4_api_key"
        android:maxLines="1"
        android:singleLine="true"
        android:title="@string/pref_title_snipeit_4_api_key"
        />

    <SwitchPreferenceCompat
        android:defaultValue="@string/pref_default_snipeit4_utc_time"
        android:key="@string/pref_key_snipeit4_utc_time"
        android:summary="@string/pref_description_snipeit4_utc_time"
        android:title="@string/pref_title_snipeit4_utc_time"/>

    <SwitchPreferenceCompat
        android:defaultValue="@string/pref_default_snipeit4_workarounds"
        android:key="@string/pref_key_snipeit4_workarounds"
        android:summary="@string/pref_description_snipeit4_workarounds"
        android:title="@string/pref_title_snipeit4_workarounds"/>

</PreferenceScreen>
