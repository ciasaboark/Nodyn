<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top most widget, show a grid of assets by category -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:text="Available Models"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:textColor="?colorAccent"/>

        <fragment
            android:id="@+id/overview_grid_fragment"
            android:name="io.phobotic.nodyn_app.fragment.dash.ModelGridFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:tag=".OverviewGridFragment"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:text="30 Day Activity"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:textColor="?colorAccent"/>

        <fragment
            android:id="@+id/history_chart_fragment"
            android:name="io.phobotic.nodyn_app.fragment.dash.HistoryChartFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:tag=".HistoryChartFragment"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:text="Assets by Status"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:textColor="?colorAccent"/>

        <fragment
            android:id="@+id/status_chart_fragment"
            android:name="io.phobotic.nodyn_app.fragment.dash.AssetStatusChartFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag=".AssetStatusChartFragment"/>
    </LinearLayout>

</LinearLayout>
