<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:outlineProvider="bounds"
                android:transitionName="check_out_root"
                tools:context="io.phobotic.nodyn_app.fragment.CheckOutFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:elevation="2dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/card_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:outlineProvider="bounds"
            android:paddingBottom="40dp"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:visibility="visible">

            <TextSwitcher
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="24dp"
                android:text="@string/check_out_title_scan_an_asset"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                android:textColor="@color/section_title"/>

            <TextSwitcher
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="@string/blank"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/checkout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:elevation="6dp"
        android:src="@drawable/ic_account_card_details_white_24dp"
        android:visibility="gone"
        app:elevation="4dp"/>

    <RelativeLayout
        android:id="@+id/warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/default_accent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="4dp"
        android:orientation="vertical"
        android:outlineProvider="bounds"
        android:visibility="gone">

        <TextView
            android:id="@+id/warning_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:text="@string/check_out_warning_message_1"
            android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
            android:textColor="?android:attr/textColorPrimaryInverse"/>

        <TextView
            android:id="@+id/warning_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/warning_text_1"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:text="@string/check_out_warning_message_2"
            android:textAppearance="@android:style/TextAppearance.Material.Inverse"/>

        <ProgressBar
            android:id="@+id/warning_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/warning_text_2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-7dp"
            android:backgroundTint="#ec407a"
            android:paddingBottom="0dp"
            android:progressTint="@android:color/white"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/checkout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/warning"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:outlineProvider="bounds"
        android:visibility="visible">

        <!-- TODO: Update blank fragment layout -->

        <io.phobotic.nodyn_app.view.AssetScannerView
            android:id="@+id/scan_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

    </RelativeLayout>
</RelativeLayout>
