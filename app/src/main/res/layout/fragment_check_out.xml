<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:outlineProvider="bounds"
                android:transitionName="check_out_root"
                tools:context="io.phobotic.nodyn_app.fragment.CheckOutFragment">


    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="?colorSecondaryLight"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:outlineProvider="bounds"
        android:paddingBottom="40dp"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:paddingTop="40dp"
        android:visibility="gone">


        <TextSwitcher
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="@string/check_out_title_scan_an_asset"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Large"/>

        <TextSwitcher
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/blank"
            android:textAlignment="center"
            android:theme="@style/TextAppearance.AppCompat"/>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/checkout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-26dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:elevation="6dp"
        android:src="@drawable/ic_arrow_up_bold_hexagon_outline_white_24dp"
        app:elevation="6dp"/>

    <RelativeLayout
        android:id="@+id/warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#ec407a"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="4dp"
        android:orientation="vertical"
        android:outlineProvider="bounds"
        android:visibility="visible">

        <TextView
            android:id="@+id/warning_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:text="@string/check_out_warning_message_1"
            android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
            android:textColor="?android:attr/textColorPrimaryInverse"/>

        <TextView
            android:id="@+id/warning_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/warning_text_1"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:text="@string/check_out_warning_message_2"
            android:textAppearance="@android:style/TextAppearance.Material.Inverse"/>

        <ProgressBar
            android:id="@+id/warning_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/warning_text_2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-7dp"
            android:backgroundTint="#ec407a"
            android:paddingBottom="0dp"
            android:progressTint="@android:color/white"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/checkout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/warning"
        android:background="@color/white"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="2dp"
        android:outlineProvider="bounds"
        android:visibility="visible">

        <!-- TODO: Update blank fragment layout -->

        <io.phobotic.nodyn_app.view.AssetScanList
            android:id="@+id/scan_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

    </RelativeLayout>
</RelativeLayout>
