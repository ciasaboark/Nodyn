<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Unexpected Asset Scanned"
        android:textAppearance="@android:style/TextAppearance.Material.Large"/>

    <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="@string/audit_unexpected_status_intro"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"/>

    <TextView
        android:id="@+id/statuses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="@string/placeholder"/>

    <TextView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/statuses"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="@string/audit_unexpected_status_add"/>

    <RelativeLayout
        android:layout_width="@dimen/circle_highlight_box"
        android:layout_height="@dimen/circle_highlight_box"
        android:layout_below="@id/add"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_highlight"
        android:backgroundTint="#ffa726"
        android:padding="@dimen/circle_hightlight_padding">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tag"
            android:tint="@color/white"/>
    </RelativeLayout>

</RelativeLayout>