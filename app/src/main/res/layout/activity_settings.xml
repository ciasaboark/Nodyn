<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <fragment
                android:name="io.phobotic.nodyn.fragment.preference.UsersPreferenceFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag=".UsersPreferenceFragment"/>

            <fragment
                android:name="io.phobotic.nodyn.fragment.preference.AssetPreferenceFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag=".AssetPreferenceFragment"/>

            <fragment
                android:name="io.phobotic.nodyn.fragment.preference.CheckOutPreferenceFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag=".CheckOutPreferenceFragment"/>

            <fragment
                android:name="io.phobotic.nodyn.fragment.preference.CheckInPreferenceFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag=".CheckInPreferenceFragment"/>

            <fragment
                android:name="io.phobotic.nodyn.fragment.preference.NotificationPreferenceFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag=".NotificationPreferenceFragment"/>

            <fragment
                android:name="io.phobotic.nodyn.fragment.preference.DataSyncPreferenceFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag=".DataSyncPreferenceFragment"/>

            <fragment
                android:name="io.phobotic.nodyn.fragment.preference.EmailPreferenceFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag=".EmailPreferenceFragment"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>