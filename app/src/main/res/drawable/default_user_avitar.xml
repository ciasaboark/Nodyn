<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="oval">
            <solid android:color="@color/grey600"/>
            <size
                android:width="200dp"
                android:height="200dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <!-- transparent stroke = larger_circle_size - smaller_circle_size -->
            <stroke
                android:width="10dp"
                android:color="@android:color/transparent"/>
            <solid android:color="#fff"/>
            <size
                android:width="200dp"
                android:height="200dp"/>
        </shape>
    </item>
    <item>
        <vector xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="200dp"
                android:height="200dp"
                android:viewportHeight="24"
                android:viewportWidth="24">
            <path
                android:fillColor="@color/grey600"
                android:pathData="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"/>

        </vector>
        <clip>
            <shape android:shape="rectangle">
                <size
                    android:width="12dp"
                    android:height="20dp"></size>
                <solid android:color="#000"/>
            </shape>
        </clip>
    </item>

</layer-list>