<resources>

    <style name="DarkCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/generic_card_background_dark</item>
        <item name="strokeColor">@color/generic_card_border_dark</item>
        <item name="strokeWidth">1dp</item>

        <item name="android:textViewStyle">@style/Card.TextDark</item>
    </style>

    <style name="LightCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/generic_card_background_light</item>
        <item name="strokeColor">@color/generic_card_border_light</item>
        <item name="strokeWidth">1dp</item>

        <item name="android:textAppearance">@style/Card.TextLight</item>

    </style>

    <style name="Card.TextDark" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textColorSecondary">@android:color/secondary_text_dark</item>
        <item name="android:textColorHighlight">@android:color/primary_text_dark</item>
        <item name="android:textColorLink">@color/white</item>
    </style>

    <style name="Card.TextLight" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textColorSecondary">@android:color/secondary_text_light</item>
        <item name="android:textColorHighlight">@android:color/primary_text_light</item>
        <item name="android:textColorLink">@color/text_link_color_light</item>
    </style>

</resources>