<manifest package="io.phobotic.nodyn_app"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.NFC"/>

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="false"/>

    <application
        android:name="io.phobotic.nodyn_app.Nodyn"
        android:allowBackup="true"

        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Audit">
        <activity
            android:name="io.phobotic.nodyn_app.activity.MainActivity"

            android:label="@string/app_name"
            android:theme="@style/Audit"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name="io.phobotic.nodyn_app.service.SyncService"
            android:enabled="true">
        </service>
        <service
            android:name="io.phobotic.nodyn_app.service.AuditEmailService"
            android:enabled="true">
        </service>
        <service
            android:name="io.phobotic.nodyn_app.service.StatisticsService"
            android:enabled="true">
        </service>
        <service
            android:name="io.phobotic.nodyn_app.service.PastDueAlertService"
            android:enabled="true">
        </service>

        <receiver
            android:name="io.phobotic.nodyn_app.receiver.BootReceiver"
            android:enabled="true"
            android:exported="true"
            android:label="StartServiceAtBootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
        <receiver
            android:name="io.phobotic.nodyn_app.receiver.UpgradeReceiver"
            android:enabled="true"
            android:exported="true"
            android:label="RescheduleOnUpgradeReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED"/>
            </intent-filter>
        </receiver>

        <activity
            android:name="io.phobotic.nodyn_app.activity.AssetDetailsActivity"
            android:label="@string/title_activity_asset_details"
            android:parentActivityName="io.phobotic.nodyn_app.activity.MainActivity"
            android:theme="@style/Audit">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.phobotic.nodyn_app.activity.MainActivity"/>
        </activity>
        <activity
            android:name="io.phobotic.nodyn_app.activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="io.phobotic.nodyn_app.activity.MainActivity"
            android:theme="@style/Audit"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.phobotic.nodyn_app.activity.MainActivity"/>
        </activity>
        <activity
            android:name="io.phobotic.nodyn_app.activity.UserDetailsActivity"
            android:label="@string/title_activity_user_details"
            android:parentActivityName="io.phobotic.nodyn_app.activity.MainActivity"
            android:theme="@style/Audit">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.phobotic.nodyn_app.activity.MainActivity"/>
        </activity>
        <activity
            android:name="io.phobotic.nodyn_app.activity.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="io.phobotic.nodyn_app.activity.MainActivity"
            android:theme="@style/Audit">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.phobotic.nodyn_app.activity.MainActivity"/>
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="3a8beb947bb71118e0b546ad35a311f886cf00c8"/>

        <activity
            android:name="io.phobotic.nodyn_app.activity.CheckoutActivity"
            android:label="@string/title_activity_check_out"
            android:parentActivityName="io.phobotic.nodyn_app.activity.MainActivity"
            android:theme="@style/Audit"
            android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>
        <activity
            android:name="io.phobotic.nodyn_app.activity.CheckinActivity"
            android:label="@string/title_activity_check_in"
            android:parentActivityName="io.phobotic.nodyn_app.activity.MainActivity"
            android:theme="@style/Audit"
            android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>
        <activity
            android:name="io.phobotic.nodyn_app.activity.ShareSettingsActivity"
            android:label="@string/title_activity_share_settings"
            android:parentActivityName="io.phobotic.nodyn_app.activity.SettingsActivity"
            android:theme="@style/Audit">
        </activity>
        <activity
            android:name="io.phobotic.nodyn_app.activity.ReceiveSettingsActivity"
            android:label="@string/title_activity_receive_settings"
            android:parentActivityName="io.phobotic.nodyn_app.activity.SettingsActivity"
            android:theme="@style/Audit">
        </activity>
        <activity
            android:name="io.phobotic.nodyn_app.activity.ReceiveSettingsNFCActivity"
            android:label="@string/title_activity_receive_nfc_settings"
            android:parentActivityName="io.phobotic.nodyn_app.activity.MainActivity"
            android:theme="@style/Audit">
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>

                <category android:name="android.intent.category.DEFAULT"/>

                <data android:mimeType="text/plain"/>
            </intent-filter>
        </activity>
        <activity
            android:name="io.phobotic.nodyn_app.activity.AuditActivity"
            android:label="@string/title_activity_audit"
            android:parentActivityName="io.phobotic.nodyn_app.activity.MainActivity"
            android:theme="@style/Audit"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.phobotic.nodyn_app.activity.MainActivity"/>
        </activity>
        <activity
            android:name="io.phobotic.nodyn_app.activity.AuditDefinitionsActivity"
            android:label="@string/title_activity_defined_audits"
            android:parentActivityName="io.phobotic.nodyn_app.activity.SettingsActivity"
            android:theme="@style/Audit">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.phobotic.nodyn_app.activity.SettingsActivity"/>
        </activity>
    </application>

</manifest>